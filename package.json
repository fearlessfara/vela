{
  "name": "@fearlessfara/vela",
  "version": "0.1.2",
  "description": "TypeScript Apache Velocity engine with 1:1 Java compatibility",
  "main": "dist/index.js",
  "browser": "dist-browser/browser.js",
  "unpkg": "dist-browser/vela.umd.js",
  "jsdelivr": "dist-browser/vela.umd.js",
  "type": "module",
  "files": [
    "dist/**",
    "dist-browser/**"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser && npm run build:umd",
    "build:node": "tsc && tsc -p tools/tsconfig.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "build:umd": "rollup -c",
    "build:tools": "tsc -p tools/tsconfig.json",
    "test": "npm run test:velocity && npm run test:unit",
    "test:velocity": "npm run build:node && node dist/tools/compare-velocity/harness.js",
    "test:velocity:single": "npm run build:node && node dist/tools/compare-velocity/harness.js",
    "test:unit": "npm run build:node && node --experimental-vm-modules node_modules/.bin/jest",
    "dev": "tsc --watch",
    "clean": "rm -rf dist dist-browser"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "jest": "^30.1.3",
    "rollup": "^4.50.2",
    "ts-jest": "^29.4.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chevrotain": "^11.0.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "vtl",
    "velocity",
    "template-engine",
    "apache-velocity",
    "chevrotain",
    "parser",
    "browser",
    "node"
  ]
}
